---
import InputField from '~/components/InputField.astro'
---

<form
  netlify-honeypot
  data-netlify
  name="contact-gapurov"
  id="contact-form"
  method="POST"
  class="grid grid-cols-1 gap-y-6 text-white sm:gap-x-8"
>
  <p class="hidden">
    <label>
      Don’t fill this out if you’re human: <input name="bot-field" />
    </label>
  </p>
  <div>
    <label for="name" class="block text-sm font-normal text-white"
      >Your Name (required)</label
    >
    <div class="mt-1">
      <InputField type="text" name="name" required />
    </div>
  </div>

  <div>
    <label for="email" class="block text-sm font-normal text-white"
      >Email (required)</label
    >
    <div class="mt-1">
      <InputField type="email" name="email" required />
    </div>
  </div>

  <div>
    <label for="subject" class="block text-sm font-normal text-white"
      >Subject (required)</label
    >
    <div class="mt-1">
      <InputField type="text" name="subject" required />
    </div>
  </div>

  <div>
    <label for="message" class="block text-sm font-normal text-white"
      >Message (required)</label
    >
    <div class="mt-1">
      <textarea
        id="message"
        name="message"
        rows="4"
        class="block w-full rounded border-orange-500 bg-orange-700 px-4 py-2 shadow-sm transition focus:border-white focus:ring-white"
        required></textarea>
    </div>
  </div>
  <div>
    <button
      type="submit"
      class="inline-flex w-full items-center justify-center rounded border border-transparent bg-green-600 px-16 py-3 text-base font-normal text-white shadow-sm transition duration-300 hover:bg-green-700 focus:outline-none focus:ring-1 focus:ring-white focus:ring-offset-1 md:w-auto"
      >Send</button
    >
  </div>
</form>
